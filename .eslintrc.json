{
  "root": true,
  "extends": [ "airbnb-base", "plugin:react/recommended",
    "plugin:jsx-a11y/recommended", "plugin:prettier/recommended"
  ],
  "plugins": [
    "react",
    "import",
    "jsx-a11y"
  ],
  "parser": "babel-eslint",
  "settings": {
    "react": {
      "version": "16.0"
    }
  },
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "jest": true
  },
  "rules": {
    "class-methods-use-this": "off",
    "react/jsx-no-bind": [
      "error",
      {
        "allowArrowFunctions": true,
        "allowBind": false,
        "ignoreRefs": true
      }
    ]
  }
}